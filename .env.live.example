# DipMaster Live Trading Environment Configuration
# 实盘交易环境配置文件
# 复制此文件为 .env 并填入真实的API密钥

# =============================================================================
# BINANCE API CONFIGURATION
# =============================================================================
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_api_secret_here

# API设置
BINANCE_TESTNET=false  # 设为true使用测试网
BINANCE_BASE_URL=https://api.binance.com

# =============================================================================
# TRADING CONFIGURATION
# =============================================================================

# 基础设置
TRADING_MODE=live                    # live/paper
MAX_CONCURRENT_POSITIONS=2           # 最大并发仓位
POSITION_SIZE_USD=800                # 单仓位大小
MAX_LEVERAGE=6                       # 最大杠杆

# 风险管理
DAILY_LOSS_LIMIT_USD=300             # 日损失限制
MAX_DRAWDOWN_PERCENT=2.5             # 最大回撤
STOP_LOSS_PERCENT=1.5                # 止损百分比
MAX_HOLDING_MINUTES=120              # 最大持仓时间

# 信号参数 (基于过拟合分析优化)
RSI_LOWER=40                         # RSI下限
RSI_UPPER=60                         # RSI上限  
MA_PERIOD=30                         # 移动平均周期
PROFIT_TARGET_PERCENT=1.0            # 盈利目标
VOLUME_MULTIPLIER=1.3                # 成交量倍数
DIP_THRESHOLD_PERCENT=0.15           # 下跌阈值

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================

# 仪表板设置
DASHBOARD_ENABLED=true
DASHBOARD_PORT=8080
DASHBOARD_HOST=0.0.0.0

# 日志设置
LOG_LEVEL=INFO                       # DEBUG/INFO/WARNING/ERROR
LOG_TO_FILE=true
LOG_DIRECTORY=logs

# 警报设置
ALERT_CONSECUTIVE_LOSSES=3           # 连续亏损警报
ALERT_DAILY_LOSS_PERCENT=5           # 日损失警报阈值
ALERT_WIN_RATE_BELOW=40              # 胜率警报阈值

# =============================================================================
# SYSTEM CONFIGURATION
# =============================================================================

# 数据设置
DATA_DIRECTORY=data
RESULTS_DIRECTORY=results
TIMEFRAME=5m
HISTORY_DAYS=30

# WebSocket设置
WEBSOCKET_RECONNECT=true
WEBSOCKET_TIMEOUT=60

# 执行设置
ORDER_RETRY_ATTEMPTS=3
ORDER_RETRY_DELAY_MS=1000
SLIPPAGE_TOLERANCE_PERCENT=0.1

# =============================================================================
# SAFETY SETTINGS
# =============================================================================

# 熔断器设置
CIRCUIT_BREAKER_ENABLED=true
CONSECUTIVE_LOSS_LIMIT=5
VOLATILITY_SPIKE_PROTECTION=true

# 紧急停止
EMERGENCY_STOP_ENABLED=true
FORCE_EXIT_ON_ERROR=true

# =============================================================================
# PERFORMANCE MONITORING
# =============================================================================

# 性能跟踪
TRACK_WIN_RATE=true
TRACK_DRAWDOWN=true
TRACK_PROFIT_FACTOR=true
TRACK_SHARPE_RATIO=true

# 组件监控
MONITOR_SIGNAL_QUALITY=true
MONITOR_RISK_MANAGER=true
MONITOR_EXECUTION=true

# =============================================================================
# DEVELOPMENT & DEBUG (Optional)
# =============================================================================

# 调试模式
DEBUG_MODE=false
VERBOSE_LOGGING=false
SAVE_DEBUG_DATA=false

# 测试模式
SIMULATION_MODE=false
PAPER_TRADING_CAPITAL=10000

# =============================================================================
# ADVANCED SETTINGS (谨慎修改)
# =============================================================================

# 算法设置
SIGNAL_CONFIDENCE_THRESHOLD=0.6
BOUNDARY_EXIT_ENABLED=true
TIME_FILTER_ENABLED=true

# 优化设置
PARAMETER_OPTIMIZATION=false
ADAPTIVE_PARAMETERS=false
REGIME_DETECTION=false

# =============================================================================
# NOTIFICATION SETTINGS (可选)
# =============================================================================

# 邮件通知 (可选)
EMAIL_NOTIFICATIONS=false
SMTP_SERVER=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
NOTIFICATION_EMAIL=

# Telegram通知 (可选)
TELEGRAM_NOTIFICATIONS=false
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# =============================================================================
# BACKUP & RECOVERY
# =============================================================================

# 备份设置
AUTO_BACKUP=true
BACKUP_DIRECTORY=backups
BACKUP_FREQUENCY_HOURS=24

# 恢复设置
AUTO_RECOVERY=true
RECOVERY_CHECK_INTERVAL=60

# =============================================================================
# 使用说明
# =============================================================================

# 1. 复制此文件为 .env
# 2. 填入真实的API密钥和配置
# 3. 根据需要调整参数
# 4. 确保 .env 文件不会提交到版本控制系统
# 5. 定期检查和更新配置

# 重要提醒:
# - API密钥必须正确设置
# - 建议先在纸面交易模式测试
# - 关注风险管理参数设置
# - 定期监控和调整参数