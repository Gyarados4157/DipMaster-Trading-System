# DipMaster Frontend Environment Configuration
# Copy this file to .env.local and fill in your values

# Backend API Configuration
BACKEND_URL=http://localhost:8000
WS_URL=ws://localhost:8000

# Authentication
JWT_SECRET=your-jwt-secret-key-here
AUTH_COOKIE_NAME=dipmaster-auth-token

# Application Configuration
NEXT_PUBLIC_APP_NAME=DipMaster Trading System
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_API_TIMEOUT=30000

# Feature Flags
NEXT_PUBLIC_ENABLE_DEMO_MODE=true
NEXT_PUBLIC_ENABLE_SOUND_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_DESKTOP_NOTIFICATIONS=true

# WebSocket Configuration
NEXT_PUBLIC_WS_RECONNECT_ATTEMPTS=5
NEXT_PUBLIC_WS_RECONNECT_INTERVAL=3000

# Trading Configuration (Display Only)
NEXT_PUBLIC_DEFAULT_SYMBOLS=BTCUSDT,ETHUSDT,ADAUSDT,SOLUSDT,DOGEUSDT
NEXT_PUBLIC_MAX_POSITIONS=3

# UI Configuration
NEXT_PUBLIC_DEFAULT_THEME=dark
NEXT_PUBLIC_DEFAULT_LANGUAGE=en
NEXT_PUBLIC_DEFAULT_CURRENCY=USD