# DipMaster Trading System Environment Variables
# Copy this file to .env and fill in your actual values

# ============================================================================
# BINANCE API CREDENTIALS (Required for live trading)
# ============================================================================
# Get these from: https://www.binance.com/en/my/settings/api-management
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_api_secret_here

# Use testnet for safe testing (true/false)
TESTNET=false

# ============================================================================
# TRADING CONFIGURATION
# ============================================================================
# Trading pairs to monitor (comma-separated)
TRADING_SYMBOLS=BTCUSDT,ETHUSDT,BNBUSDT

# Enable paper trading for safe testing (true/false)
PAPER_TRADING=true

# Maximum number of concurrent positions
MAX_POSITIONS=3

# Position size in USD
MAX_POSITION_SIZE=1000

# Daily loss limit in USD (negative value)
DAILY_LOSS_LIMIT=-500

# Maximum daily trades
MAX_DAILY_TRADES=50

# Auto-start trading on system boot (true/false)
AUTO_START=false

# ============================================================================
# STRATEGY PARAMETERS
# ============================================================================
# Minimum dip threshold (decimal, e.g. 0.002 = 0.2%)
DIP_THRESHOLD=0.002

# Maximum holding time in minutes
MAX_HOLDING_MINUTES=180

# Target profit percentage (decimal, e.g. 0.008 = 0.8%)
TARGET_PROFIT=0.008

# Minimum signal confidence (0.0 to 1.0)
MIN_CONFIDENCE=0.6

# ============================================================================
# SYSTEM CONFIGURATION
# ============================================================================
# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Enable dashboard (true/false)
DASHBOARD_ENABLED=true

# Dashboard port
DASHBOARD_PORT=8080

# Enable notifications (true/false)
NOTIFICATIONS_ENABLED=false

# ============================================================================
# PERFORMANCE TUNING
# ============================================================================
# Maximum worker threads
MAX_WORKERS=4

# Memory limit (e.g., 1GB, 2GB)
MEMORY_LIMIT=2GB

# ============================================================================
# NOTIFICATIONS (Optional)
# ============================================================================
# Slack webhook URL for notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Email notifications (if implemented)
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
EMAIL_TO=alerts@yourdomain.com

# ============================================================================
# DATABASE (Optional)
# ============================================================================
# Database URL for advanced setups
DATABASE_URL=sqlite:///data/dipmaster.db

# PostgreSQL example:
# DATABASE_URL=postgresql://username:password@localhost:5432/dipmaster

# ============================================================================
# MONITORING & OBSERVABILITY
# ============================================================================
# Prometheus metrics endpoint (true/false)
METRICS_ENABLED=false

# Health check endpoint port
HEALTH_CHECK_PORT=8081

# ============================================================================
# DEVELOPMENT & DEBUGGING
# ============================================================================
# Enable debug mode (true/false)
DEBUG=false

# Enable profiling (true/false)
PROFILE_ENABLED=false

# Save debug data (true/false)
SAVE_DEBUG_DATA=false