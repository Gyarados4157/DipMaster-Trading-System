{
  "risk_framework_metadata": {
    "name": "DipCatcher_Risk_Control_Framework",
    "version": "1.0.0",
    "effective_date": "2025-08-18",
    "review_frequency": "monthly",
    "owner": "Chief Risk Officer",
    "approval_authority": "Risk Committee"
  },
  
  "risk_taxonomy": {
    "market_risk": {
      "directional_risk": {
        "description": "策略对市场方向性移动的敞口",
        "measurement": "Beta, Dollar Delta",
        "limits": {
          "portfolio_beta": {"max": 0.15, "target": 0.0},
          "net_exposure": {"max": 0.10, "target": 0.05},
          "sector_beta": {"max": 0.20, "target": 0.10}
        },
        "monitoring_frequency": "real-time"
      },
      
      "volatility_risk": {
        "description": "市场波动率变化对策略的影响",
        "measurement": "Vega, Volatility Beta",
        "limits": {
          "vol_beta": {"max": 0.25, "target": 0.15},
          "gamma_exposure": {"max": 0.05, "target": 0.02}
        },
        "hedging_instruments": ["VIX futures", "options collars"]
      },
      
      "correlation_risk": {
        "description": "资产间相关性突然增加的风险",
        "measurement": "Correlation matrix, Eigenvalue analysis",
        "limits": {
          "max_correlation": 0.8,
          "concentration_ratio": 0.3,
          "first_eigenvalue_ratio": 0.6
        },
        "stress_scenarios": ["correlation spike to 0.9", "factor model breakdown"]
      }
    },
    
    "liquidity_risk": {
      "market_liquidity": {
        "description": "市场流动性枯竭导致的平仓困难",
        "measurement": "Bid-ask spread, Market depth",
        "limits": {
          "max_spread": 0.001,
          "min_market_depth": 100000,
          "liquidity_score_min": 0.7
        },
        "contingency_plans": [
          "分批平仓策略",
          "跨交易所执行",
          "做市商关系激活"
        ]
      },
      
      "funding_liquidity": {
        "description": "资金流动性不足导致的保证金风险",
        "measurement": "Cash ratio, Margin utilization",
        "limits": {
          "cash_buffer_min": 0.15,
          "margin_utilization_max": 0.7,
          "funding_horizon": "24 hours"
        },
        "stress_test": "7天无法融资情况下的生存能力"
      }
    },
    
    "operational_risk": {
      "technology_risk": {
        "description": "系统故障导致的交易中断风险",
        "measurement": "System uptime, Latency, Error rates",
        "sla_targets": {
          "system_uptime": 0.999,
          "max_latency": "500ms",
          "error_rate": 0.001
        },
        "backup_systems": [
          "冗余交易服务器",
          "备用数据源",
          "手动交易流程"
        ]
      },
      
      "model_risk": {
        "description": "模型失效或参数漂移风险",
        "measurement": "Model performance metrics, Parameter stability",
        "monitoring": {
          "sharpe_ratio_floor": 2.0,
          "max_consecutive_losses": 5,
          "parameter_drift_threshold": 0.2
        },
        "model_validation": {
          "backtesting_frequency": "monthly",
          "out_of_sample_testing": "quarterly",
          "champion_challenger": "continuous"
        }
      },
      
      "execution_risk": {
        "description": "订单执行中的滑点和延迟风险",
        "measurement": "Slippage, Fill rate, Execution time",
        "limits": {
          "max_slippage": 0.0005,
          "min_fill_rate": 0.95,
          "max_execution_time": "1000ms"
        },
        "optimization": [
          "智能订单路由",
          "时间加权平均价格",
          "流动性预测模型"
        ]
      }
    },
    
    "concentration_risk": {
      "position_concentration": {
        "description": "单一资产或策略的过度集中",
        "limits": {
          "single_asset_max": 0.08,
          "top_5_assets_max": 0.30,
          "sector_max": 0.25,
          "strategy_max": 0.40
        },
        "diversification_metrics": [
          "Herfindahl指数",
          "有效资产数量",
          "集中度比率"
        ]
      },
      
      "temporal_concentration": {
        "description": "特定时间段的交易过度集中",
        "limits": {
          "hourly_trade_limit": 5,
          "daily_volume_max": 0.1,
          "intraday_exposure_max": 0.15
        },
        "time_diversification": "24小时均匀分布目标"
      }
    }
  },
  
  "risk_limits_hierarchy": {
    "level_1_hard_limits": {
      "description": "不可突破的绝对限制",
      "breach_action": "立即停止交易",
      "limits": {
        "max_portfolio_var_1day": 0.03,
        "max_drawdown": 0.10,
        "max_leverage": 2.5,
        "max_single_loss": 0.02
      },
      "escalation": "immediate_ceo_notification"
    },
    
    "level_2_soft_limits": {
      "description": "触发风险审查的警告线",
      "breach_action": "风险评估和仓位调整",
      "limits": {
        "portfolio_var_1day": 0.02,
        "drawdown_warning": 0.06,
        "leverage_warning": 2.0,
        "correlation_warning": 0.7
      },
      "escalation": "risk_manager_review"
    },
    
    "level_3_monitoring_thresholds": {
      "description": "日常监控的关注阈值",
      "breach_action": "增强监控频率",
      "limits": {
        "daily_var": 0.015,
        "weekly_drawdown": 0.04,
        "position_drift": 0.1,
        "model_performance": 0.8
      },
      "escalation": "team_notification"
    }
  },
  
  "var_framework": {
    "calculation_methodology": {
      "confidence_level": 0.95,
      "time_horizon": "1_day",
      "estimation_method": "Monte_Carlo",
      "sample_size": 10000,
      "lookback_period": "252_days"
    },
    
    "var_models": {
      "parametric_var": {
        "method": "Normal distribution assumption",
        "weight": 0.3,
        "advantages": "计算快速",
        "limitations": "忽略尾部风险"
      },
      
      "historical_var": {
        "method": "Historical simulation",
        "weight": 0.4,
        "advantages": "捕捉实际分布",
        "limitations": "依赖历史数据"
      },
      
      "monte_carlo_var": {
        "method": "Random scenario generation",
        "weight": 0.3,
        "advantages": "灵活建模",
        "limitations": "计算复杂"
      }
    },
    
    "backtesting": {
      "frequency": "daily",
      "violation_threshold": 0.05,
      "traffic_light_system": {
        "green": "violations < 2.5%",
        "yellow": "violations 2.5-5%",
        "red": "violations > 5%"
      }
    }
  },
  
