# Claude环境配置 - DipMaster Trading System
# Claude Environment Configuration for DipMaster Trading System

# 工作模式设置
CLAUDE_MODE=YOLO
CLAUDE_AUTO_APPROVE=true
CLAUDE_REQUIRE_CONFIRMATION=false

# 工具权限
CLAUDE_ALLOW_ALL_TOOLS=true
CLAUDE_ALLOW_SYSTEM_COMMANDS=true
CLAUDE_ALLOW_NETWORK_ACCESS=true
CLAUDE_ALLOW_FILE_OPERATIONS=true
CLAUDE_ALLOW_DATABASE_OPERATIONS=true

# 项目特定设置
PROJECT_TYPE=quantitative_trading
PROJECT_NAME=DipMaster_Trading_System
PROJECT_VERSION=3.0.0

# 安全设置
LIVE_TRADING_PROTECTION=true
API_KEY_PROTECTION=true
DATABASE_BACKUP_ENABLED=true

# 开发设置
VERBOSE_LOGGING=true
DETAILED_ERRORS=true
AUTO_INSTALL_DEPS=true
AUTO_FORMAT_CODE=true

# MCP服务
MCP_SERVICES_ENABLED=true
MCP_AUTO_CONNECT=true

# 注意：这些环境变量主要用于文档化Claude的工作偏好
# 实际的工具权限由Claude Code系统管理